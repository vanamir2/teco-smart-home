{
  "name": "teco-smart-home-backend",
  "version": "0.1.0",
  "private": false,
  "author": {
    "name": "Miroslav Váňa"
  },
  "scripts": {
    "start-dev": "nodemon ./bin/www",
    "start": "node ./bin/www",
    "client": "cd client && yarn start",
    "server": "nodemon ./bin/www",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "dev:server": "cd client && yarn build && cd .. && yarn start",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "install-all": "concurrently --kill-others-on-fail \"npm install\" \"cd client && npm install\"",
    "test": "mocha test",
    "test-all": "concurrently --kill-others-on-fail \"npm run test\" \"cd client && npm run test\""
  },
  "dependencies": {
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "logplease": "^1.2.15",
    "node-fetch": "^2.6.1",
    "md5": "^2.2.1",
    "azure-storage": "^2.10.3",
    "dotenv": "^8.2.0",
    "body-parser": "^1.19.0",
    "http-parser-js": "^0.5.2"
  },
  "eslintConfig": {
    "//": "Validation. See https://eslint.org/",
    "extends": "eslint:recommended"
  },
  "devDependencies": {
    "unit.js": "^2.1.1"
  }
}
